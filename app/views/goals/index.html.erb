      <h2>Not completed</h2>
      <ul>
         <% if @goal.empty? %>
          <span class="text-warning">You dont have any goals, start to reach them today!</span>
         <% else @goals %>
          <%= render 'sort' %> 
          <% @goal.each do |goal| %>
            <%= render partial: 'goal', object: goal %> 
          <% end %>
         <% end %>

      </ul>
      <%= link_to 'Create new goal', new_goal_path,  class: 'btn btn-primary' %>
      <h2>Completed</h2>
      <ul>
        <% if @goal_completed.empty? %>
          <span class="text-warning"> You dont have any completed goals!</span>
         <% else @goal_completed %>
         <%= render 'sort' %> 
          <% @goal_completed.each do |goal| %>
            <%= render partial: 'goal', object: goal %> 
          <% end %>
         <% end %>
      </ul>